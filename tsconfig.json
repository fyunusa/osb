{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "packages/core",
    "packages/cli",
    "packages/decorators",
    "packages/types"
  ]
}
